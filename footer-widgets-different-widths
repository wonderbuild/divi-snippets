    width: 15%;
}
 
#footer-widgets .footer-widget:nth-of-type(2){
    width: 17%;
}

#footer-widgets .footer-widget:nth-of-type(3){
    width: 8%;
}

#footer-widgets .footer-widget:nth-of-type(4){
    width: 8%;
}
 
#footer-widgets .footer-widget:last-of-type {
    width: 25%;
}
    }
